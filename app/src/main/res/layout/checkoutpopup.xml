<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:padding="5dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/txclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#fff"
        android:text="X"
        android:textSize="20dp"
        android:background="#000"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/calendarView4"
            android:layout_marginRight="22dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_width="fill_parent"
            android:text="CLOCK OUT HERE.."
            android:textColor="#fff"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/staff_id"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:drawablePadding="12dp"
            android:ems="10"
            android:textSize="15dp"
            android:hint="Enter Staff Id"
            android:inputType="number"
            android:padding="8dp"
            android:text=""
            android:textColor="#000"
            android:textColorHint="#000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/calendarView5"
            android:layout_marginRight="22dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_width="fill_parent"
            android:text="Reason"
            android:textColor="#fff"
            android:textSize="16dp"/>

        <LinearLayout

            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:textColor="#fff"
                android:text="Normal End" />

            <CheckBox
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Other"
                android:textColor="#fff" />

        </LinearLayout>


        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:drawablePadding="12dp"
            android:textSize="15dp"
            android:hint="Reason"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:ems="10"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:text=""
            android:textColor="#000"
            android:textColorHint="#000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/out"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Clock Out"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/layout"
            />
    </LinearLayout>

</LinearLayout>