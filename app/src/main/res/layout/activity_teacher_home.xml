<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:background="#fff"
        android:id="@+id/line1"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="0dp"
            android:id="@+id/makeApoiReg"
            android:layout_marginTop="3dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:background="#f5f4f4"
                android:orientation="vertical"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="3dp"
                android:id="@+id/bc">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginRight="0dp"
                    android:drawableLeft="@drawable/personicon"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000"
                    android:textStyle="normal"
                    android:layout_marginBottom="1dp"
                    android:textSize="16sp"
                    android:id="@+id/namexx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=""
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:lines="1"
                    android:drawableLeft="@drawable/ic_fingerprint_black_24dp"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:textColor="#737373"
                    android:layout_marginBottom="0dp"
                    android:textSize="14sp"
                    android:id="@+id/staffId" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text=""
                    android:drawableLeft="@drawable/timer_black_24dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:textColor="#737373"
                    android:layout_marginBottom="0dp"
                    android:textSize="14sp"
                    android:id="@+id/datetoday" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/bcdccd100">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/bcdd">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/line1"
        android:layout_above="@+id/footer"
        android:id="@+id/list">

        <ListView
            android:layout_marginTop="15dp"
            android:id="@+id/card_listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:choiceMode="multipleChoice"
            android:divider="#fff"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/myselfdd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/menuBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_weight=".5"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:background="#c20215"
                />
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_weight=".5"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:background="#5eb96d"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>